<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:background="#fff"
    tools:context="com.crm.sharepointevo.crm.Fragments.ExpensesFragment">

    <TableLayout
        android:id="@+id/tblHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F6F6F6">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0D0D0"/>

                <TextView
                    android:id="@+id/tvFirstColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HeaderTextStyle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0D0D0"/>

            </LinearLayout>

            <View
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:background="#CFCFCF"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F6F6F6">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0D0D0"/>

                <TextView
                    android:id="@+id/tvSecondColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HeaderTextStyle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0D0D0"/>

            </LinearLayout>

            <View
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:background="#CFCFCF"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F6F6F6">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0D0D0"/>

                <TextView
                    android:id="@+id/tvThirdColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HeaderTextStyle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0D0D0"/>

            </LinearLayout>

        </TableRow>
    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tblHeader"/>

</RelativeLayout>
